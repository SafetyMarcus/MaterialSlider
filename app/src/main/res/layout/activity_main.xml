<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/googleSlider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="2dp"
        android:maxHeight="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/materialSlider"
        android:layout_margin="48dp"
        android:thumbTint="@color/colorPrimaryDark"
        android:progressTint="@color/colorPrimary"
        android:splitTrack="false"
        android:tickMark="@color/colorAccent"
        android:progressDrawable="@drawable/progress_drawable"
        android:max="4"
        app:layout_constraintVertical_chainStyle="spread"/>

    <com.safetymarcus.materialslider.MaterialSlider
        android:id="@+id/materialSlider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="2dp"
        android:maxHeight="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/googleSlider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="48dp"
        android:progressDrawable="@drawable/progress_drawable"/>

    <com.safetymarcus.materialslider.MaterialSlider
        android:id="@+id/materialSlider2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="2dp"
        android:maxHeight="2dp"
        app:sections="9"
        app:thumbColour="@color/thumbAlternate"
        app:tickColour="@color/primaryDarkAlternate"
        app:tickSelectedColour="@color/primaryAlternate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialSlider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="48dp"
        android:progressDrawable="@drawable/progress_drawable"/>

</android.support.constraint.ConstraintLayout>